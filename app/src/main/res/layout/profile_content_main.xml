<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saathi.Profile"
    tools:showIn="@layout/profile_bar_main"
    android:orientation="vertical"
    android:id="@+id/profileMainOutsideLayout"
    android:weightSum="100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:id="@+id/profilePhotoPart"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="50"
        android:gravity="center"
        android:id="@+id/profileDetailsPart">

        <EditText
            android:id="@+id/personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saatvik Jain"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#808080"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/personEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="saatvik16261@iiitd.ac.in"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#808080"
                        android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/personRollNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="2016261"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/personContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="9811082616"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/personMajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="B.Tech CSAM"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/personBatchYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="2016"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@android:color/transparent"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileButtonsPart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/updateUserData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            />

        <Button
            android:id="@+id/saveUserData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>
